<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <TextView
        android:id="@+id/notify_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Andela"
        android:textSize="29sp"
        android:textStyle="bold"
        android:textColor="@color/blackish"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Become A World Class Software Developer With the Largest
Software Development Platform in Africa"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/greyish"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/alc"
        android:layout_width="320dp"
        android:layout_height="53dp"
        android:background="@drawable/button_rec_blue"
        android:layout_marginTop="120dp"
        android:text="ANDELA LEARNING COMMUNITY"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:textColor="@color/whity"
        android:textSize="14sp"
        android:letterSpacing="0.1"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/prof"
        android:layout_width="320dp"
        android:layout_height="53dp"
        android:background="@drawable/button_rec_whity"
        android:layout_marginTop="39dp"
        android:text="MY PROFILE"
        android:textSize="14sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"/>


    </LinearLayout>